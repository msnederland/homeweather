<% include ../partials/header %>

<script type="text/javascript">

$(document).ready(function () {

var deleteResults = function() {
$.ajax({
    type: 'DELETE',
    url: '/stations/<%=station.stations[0].stationName%>/measures',
    success: function(redirect){
      window.location=redirect;
    },
    error: function () {
        alert("There was an error processing this page.");
        return false;
    }
})}

var deleteStation = function() {
$.ajax({
    type: 'DELETE',
    url: '/stations/<%=station.stations[0].stationName%>',
    success: function(redirect){
      window.location=redirect;
    },
    error: function () {
        alert("There was an error processing this page.");
        return false;
    }
})}

$("#confirm-delete-station").on("click", function (e) {
  e.preventDefault();
  deleteStation();
});

$("#confirm-delete-results").on("click", function (e) {
  e.preventDefault();
  deleteResults();
});


});

</script>

<main>

<div>   

<%if(station) {%>

<div><h1>Station: <%=station.stations[0].stationName%> <button data-toggle="modal" data-target="#confirm-delete-station-modal" type="button" class="btn btn-danger btn-sm">Delete station</button><div class="pull-right"><button data-toggle="modal" data-target="#confirm-delete-results-modal" type="button" class="btn btn-danger btn-sm">Delete results</button></div></h1>

<div class="row">
  <div class="col-md-12" style="padding-left: 0, padding-right: 0"> 
    <table class="table table-dark table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Temperature</th>
          <th scope="col">Humidity</th>
        </tr>
      </thead>
      <tbody>
        <% $i = 1; station.stations[0].measures.forEach(function(measures) { %>
        <tr>
          <th scope="row"><%=$i%></th>
          <td><%=measures.temperature%>&#176C</td>
          <td><%=measures.humidity%> %</td>
        </tr>
        <%$i++%>
        <%})%>
      </tbody>
    </table>
  </div>

</div>

<%} else {%>
NO FUCKING STATION!
<%}%>

<div class="modal fade" id="confirm-delete-results-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <strong>Delete all measurement data?</strong>
            </div>
            <div class="modal-body">
                Do you want to delete all measurement data from station: <strong><%=station.stations[0].stationName%></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a id="confirm-delete-results" class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="confirm-delete-station-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <strong>Delete station?</strong>
            </div>
            <div class="modal-body">
                Do you want to delete station: <strong><%=station.stations[0].stationName%></strong>? This will delete the station and all its data!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a id="confirm-delete-station" class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>


</main>

<% include ../partials/footer %>